<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/album_details_song_number"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:contentDescription="@string/note_desc"
        android:text="1"
        android:gravity="center"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/album_details_song_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Song name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/album_details_song_number"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/album_details_song_artist_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Artist"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/album_details_song_number"
        app:layout_constraintTop_toBottomOf="@+id/album_details_song_name" />
</androidx.constraintlayout.widget.ConstraintLayout>